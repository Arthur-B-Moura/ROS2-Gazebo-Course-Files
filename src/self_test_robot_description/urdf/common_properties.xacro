<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- ========= -->
    <!-- Materials -->
    <!-- ========= -->
    
    <material name="green">
        <!-- Reg Green Blue Alfa -->
        <color rgba="0.0 1.0 0.2 1.0"/>
    </material>
   
    <material name="grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
    </material>
   
    <!-- ================ -->
    <!-- Intertial Macros -->
    <!-- ================ -->
     <xacro:macro name="box_intertia" params="m x y z o_xyz o_rpy">
        <inertial>
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <mass value="${m}"/>
            <inertia ixx="${(m/12)* (y*y + z*z)}" ixy="0.0" ixz="0.0" 
                     iyy="${(m/12)* (x*x + z*z)}" iyz="0.0" 
                     izz="${(m/12)* (x*x + y*y)}"/>
        </inertial>
     </xacro:macro>

     <xacro:macro name="solid_cilinder_intertia" params="m r h o_xyz o_rpy">
        <inertial>
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <mass value="${m}"/>
            <inertia ixx="${(m/12)*(3*r*r + h*h)}" ixy="0.0" ixz="0.0" 
                     iyy="${(m/12)*(3*r*r + h*h)}" iyz="0.0" 
                     izz="${(m*r*r)/2}"/>
        </inertial>
     </xacro:macro>

     <xacro:macro name="solid_sphere_intertia" params="m r o_xyz o_rpy">
        <inertial>
            <origin xyz="${o_xyz}" rpy="${o_rpy}"/>
            <mass value="${m}"/>
            <inertia ixx="${(m*r*r)*2.0/5.0}" ixy="0.0" ixz="0.0" 
                     iyy="${(m*r*r)*2.0/5.0}" iyz="0.0" 
                     izz="${(m*r*r)*2.0/5.0}"/>
        </inertial>
     </xacro:macro>
</robot>