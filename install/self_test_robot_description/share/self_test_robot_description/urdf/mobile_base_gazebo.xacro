<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Friction coeficients to smooth down caster wheel -->
    <gazebo reference="center_weel_link">
        <mu1 value="0.1" />
        <mu2 value="0.1" />
    </gazebo>
 
    <gazebo>
        <!--  Differential drive Plugin -->
        <plugin 
            filename="gz-sim-diff-drive-system" 
            name="gz::sim::systems::DiffDrive"> <!-- Get this from the .cc file -->
            <left_joint>left_weel_body</left_joint>
            <right_joint>right_weel_body</right_joint>
            <wheel_separation>${base_width}</wheel_separation>
            <wheel_radius>${weel_radius}</wheel_radius>
            <frame_id>odom</frame_id>
            <child_frame_id>base_link</child_frame_id>
        </plugin>

        <!-- Joint State Publisher -->
         <plugin
            filename="gz-sim-joint-state-publisher-system"
            name="gz::sim::systems::JointStatePublisher">
            <!-- List all joints that will be published -->
            <joint_name>left_weel_body</joint_name>
            <joint_name>right_weel_body</joint_name>
            <joint_name>camera_visor_joint</joint_name>
            <joint_name>body_second_joint</joint_name>
         </plugin>
    </gazebo>

</robot>